<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.thirdgroup.cdms.mapper.ApiKeyMapper">
    <resultMap id="BaseResultMap" type="com.thirdgroup.cdms.model.ApiKey">
        <id column="key_id" property="keyId" jdbcType="BIGINT" />
        <result column="app_name" property="appName" jdbcType="VARCHAR" />
        <result column="api_key" property="apiKey" jdbcType="VARCHAR" />
        <result column="status" property="status" jdbcType="VARCHAR" />
        <result column="create_time" property="createTime" jdbcType="TIMESTAMP" />
    </resultMap>

    <sql id="Base_Column_List">
        key_id, app_name, api_key, status, create_time
    </sql>

    <!-- 修正：key_id 是自增主键，无需手动插入 -->
    <insert id="insert" parameterType="com.thirdgroup.cdms.model.ApiKey" useGeneratedKeys="true" keyProperty="keyId">
        INSERT INTO cdms_api_key (
            app_name, api_key, status, create_time
        ) VALUES (
                     #{appName,jdbcType=VARCHAR},
                     #{apiKey,jdbcType=VARCHAR},
                     #{status,jdbcType=VARCHAR},
                     #{createTime,jdbcType=TIMESTAMP,javaType=java.util.Date}
                 )
    </insert>

    <delete id="deleteByPrimaryKey">
        DELETE FROM cdms_api_key
        WHERE key_id = #{keyId,jdbcType=BIGINT}
    </delete>

    <update id="updateByPrimaryKey" parameterType="com.thirdgroup.cdms.model.ApiKey">
        UPDATE cdms_api_key
        SET
            app_name = #{appName,jdbcType=VARCHAR},
            api_key = #{apiKey,jdbcType=VARCHAR},
            status = #{status,jdbcType=VARCHAR},
            create_time = #{createTime,jdbcType=TIMESTAMP,javaType=java.util.Date}
        WHERE key_id = #{keyId,jdbcType=BIGINT}
    </update>
    <update id="turnStatus" parameterType="java.lang.Long">
        UPDATE cdms_api_key
        SET status = CASE
                         WHEN status = 'enabled' THEN 'disabled'
                         ELSE 'enabled'
                     END
        WHERE key_id = #{keyId, jdbcType=BIGINT}
    </update>

    <select id="selectByPrimaryKey" resultMap="BaseResultMap">
        SELECT <include refid="Base_Column_List" />
        FROM cdms_api_key
        WHERE key_id = #{keyId,jdbcType=BIGINT}
    </select>

    <select id="selectAll" resultMap="BaseResultMap">
        SELECT <include refid="Base_Column_List" />
        FROM cdms_api_key
    </select>
    <select id="selectByApiKey" resultType="com.thirdgroup.cdms.model.ApiKey" parameterType="java.lang.String">
        SELECT <include refid="Base_Column_List" />
        FROM cdms_api_key
        WHERE api_key = #{apiKey,jdbcType=VARCHAR}
    </select>
    <select id="selectByPageAndAppName" resultType="com.thirdgroup.cdms.model.ApiKey">
        SELECT <include refid="Base_Column_List" />
        FROM cdms_api_key
        <where>
            <if test="keyword != null and keyword != ''">AND app_name LIKE CONCAT('%', #{keyword,jdbcType=VARCHAR}, '%')</if>
            <if test="status != null and status != ''">AND status = #{status, jdbcType=VARCHAR}</if>
        </where>
        ORDER BY create_time DESC
        LIMIT #{start,jdbcType=INTEGER}, #{size,jdbcType=INTEGER}
    </select>
    <select id="countByAppName" resultType="java.lang.Long" parameterType="java.lang.String">
        SELECT count(*)
        FROM cdms_api_key
        <where>
            <if test="keyword != null and keyword != ''">AND app_name LIKE CONCAT('%', #{keyword,jdbcType=VARCHAR}, '%')</if>
            <if test="status != null and status != ''">AND status = #{status, jdbcType=VARCHAR}</if>
        </where>
    </select>
</mapper>